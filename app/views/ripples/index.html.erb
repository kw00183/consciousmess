<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<table>
  <tbody>
    <tr>
      <td colspan="5">
        <p>Page: <%= session[:page_number] %></p>
      </td>
    </tr>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Message</th>
      <th>Posted</th>
      <th></th>
    </tr>
    <% @ripples.each do |ripple| %>

      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

        <td>
          <p>
            <%= ripple.id %>
          </p>
        </td>

        <td>
          <p>
            <% if ripple.url == '' %>
            <%= ripple.name %>
            <% else %>
            <%= link_to ripple.name, ripple.url, :target => "_blank" %>
            <% end %>
          </p>
        </td>

        <td>
          <p>
            <%= truncate(strip_tags(ripple.message),
                         length: 80) %>
          </p>
        </td>

        <td>
          <p>
            <%= ripple.updated_at %>
          </p>
        </td>

        <td class="actions">
          <%= link_to 'Show', ripple %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="5">
        <%= newest_link('Newest', ripples_newest_path) %> |
        <%= previous_link('Previous 10 Ripples', ripples_previous_path) %> |
        <%= next_link('Next 10 Ripples', ripples_next_path) %> |
        <%= oldest_link('Oldest', ripples_oldest_path) %> |
        <%= link_to 'New Ripple', new_ripple_path %>
      </td>
    </tr>
  </tfoot>
</table>
