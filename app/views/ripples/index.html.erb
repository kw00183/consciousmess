<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<table>
  <tfoot>
    <tr>
      <td colspan="5">
        <%= link_to 'Newest', ripple_newest_path %> |
        <%= link_to 'Previous 10 Ripples', ripple_previous_path %> |
        <%= link_to 'Next 10 Ripples', ripple_next_path %> |
        <%= link_to 'Oldest', ripple_oldest_path %> |
        <%= link_to 'New Ripple', new_ripple_path %>
      </td>
    </tr>
  </tfoot>
  <tbody>
    <tr>
      <th>Name</th>
      <th>Message</th>
      <th>Posted</th>
      <th></th>
    </tr>
    <% @display_ripples.each do |ripple| %>

      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

        <td>
          <p>
            <% if ripple.url == '' %>
            <%= ripple.name %>
            <% else %>
            <%= link_to ripple.name, ripple.url, :target => "_blank" %>
            <% end %>
          </p>
        </td>

        <td>
          <p>
            <%= truncate(strip_tags(ripple.message),
                         length: 80) %>
          </p>
        </td>

        <td>
          <p>
            <%= ripple.updated_at %>
          </p>
        </td>

        <td class="actions">
          <%= link_to 'Show', ripple %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
